[Unit]
Description=Bluetooth to serial status for e-paper
DefaultDependencies=no

[Service]
Type=simple
KillSignal=SIGINT
TimeoutStopSec=8
SyslogIdentifier=ser2bt-e-paper-status
ExecStart=nice -15 /usr/local/bin/ser2bt_status
StandardOutput=inherit
Restart=on-failure
RestartSec=10
KillMode=mixed

[Install]
WantedBy=sysinit.target
